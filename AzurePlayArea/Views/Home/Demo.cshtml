@{
    ViewBag.Title = "Demo";
}

<html>
<head>
    <title>Demo MVC Application</title>

    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/scrolling-nav.css" rel="stylesheet">
</head>
<body id="page-top" data-spy="scroll" data-target=".navbar-fixed-top">
    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand page-scroll" href="#page-top">Storage demo</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav">
                    <!-- Hidden li included to remove active class from about link when scrolled up past about section -->
                    <li class="hidden">
                        <a class="page-scroll" href="#page-top"></a>
                    </li>
                    <li>
                        <a class="page-scroll" href="#about">Service SAS</a>
                    </li>
                    <li>
                        <a class="page-scroll" href="#services">Account SAS</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    <!-- About Section -->
    <section id="about" class="about-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h1>Service SAS</h1>
                    <br />
                    <button class="btn btn-info" type="button" id="get-btn">Generate Blob SAS</button>
                    <button class="btn btn-primary" type="button" id="get-btn-c">Generate Container SAS</button>
                    <button class="btn btn-success" type="button" id="get-btn-l">Get list blobs with SAS</button>
                    <br /> <br /> <br />
                    <div id="content" class="well"></div>
                </div>
            </div>
        </div>
    </section>
    <!-- Services Section -->
    <section id="services" class="services-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h1>Account SAS and policies </h1>
                    <br />
                    <button class="btn btn-info" type="button" id="get-btn-a">Generate Account SAS</button>
                    <button class="btn btn-primary" type="button" id="get-btn-s">Create stored access policy</button>
                    <button class="btn btn-success" type="button" id="get-btn-cl">Clear stored access policy</button>
                    <button class="btn btn-info" type="button" id="get-btn-i">Use invalid SAS</button>
                    <button class="btn btn-primary" type="button" id="get-btn-an">List blobs anonimously</button>
                    <br /> <br /> <br />
                    <div id="content2" class="well"></div>
                </div>
            </div>
        </div>
    </section>
    <!-- jQuery -->

    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.easing.min.js"></script>
    <script src="~/Scripts/scrolling-nav.js"></script>

    <script>
        $(function () {
            $("#get-btn").on('click', function () {
                $.get('@Url.Action("GetBlobSas")').done(function (result) {
                    $('#content').html(result);
                });
            });
        });
    </script>

    <script>
        $(function () {
            $("#get-btn-c").on('click', function () {
                $.get('@Url.Action("GetContainerSas")').done(function (result) {
                    $('#content').html(result);
                });
            });
        });
    </script>

    <script>
        $(function () {
            $("#get-btn-l").on('click', function () {
                $.get('@Url.Action("GetBlobListWithSas")').done(function (result) {
                    $('#content').html(result);
                });
            });
        });
    </script>

    <script>
        $(function () {
            $("#get-btn-a").on('click', function () {
                $.get('@Url.Action("CreateAccountSas")').done(function (result) {
                    $('#content2').html(result);
                });
            });
        });
    </script>

    <script>
        $(function () {
            $("#get-btn-s").on('click', function () {
                $.get('@Url.Action("CreatePolicy")').done(function (result) {
                    $('#content2').html(result);
                });
            });
        });
    </script>

    <script>
        $(function () {
            $("#get-btn-cl").on('click', function () {
                $.get('@Url.Action("ClearPolicy")').done(function (result) {
                    $('#content2').html(result);
                });
            });
        });
    </script>

    <script>
        $(function () {
            $("#get-btn-i").on('click', function () {
                $.get('@Url.Action("GetInvalidSas")').done(function (result) {
                    $('#content2').html(result);
                });
            });
        });
    </script>

    <script>
        $(function () {
            $("#get-btn-an").on('click', function () {
                $.get('@Url.Action("GetBlobListAnomimously")').done(function (result) {
                    $('#content2').html(result);
                });
            });
        });
    </script>
</body>
</html>